package repetitionAndSelection;

import java.util.Scanner;

public class BankLoopingPassword {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		for(int i=2 ; i>=0 ;i--) {
            System.out.print("Enter your account password: ");
            int user = sc.nextInt();
            int pass = 3678;
            
            if(user == pass) {
            System.out.println("Your password is correct.");
            break;
            
            }
            
            else
            System.out.print("Your password is wrong! You have "+i+" chance. Please enter again: ");
            
            System.out.println();
            
            if(i == 0) {
            System.out.print("Invalid, please contact bank services.");
            
            }

		}
	}
}
		
